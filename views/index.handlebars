<div class="container">
<div class="col-md-12 text-center">
  <h1>Eat-Da-Burger!</h1>
</div>


<div class="col-md-6">
  <h2>Burgers to Eat</h2>

  <ul>
    {{#each burgers}}
      {{#unless devoured}}
      <li>
        {{burger_name}}
        <button class="change-devoured" data-id="{{id}}">
          Eat
        </button>
      </li>
      {{/unless}}
    {{/each}}
  </ul>

</div>

<div class="col-md-6">
  <h2>Burgers devoured</h2>

  <ul>
    {{#each burgers}}
      {{#if devoured}}
      <li>
        {{burger_name}}
        <button class="change-throwUp" data-id="{{id}}">
          throw up
        </button>
        <button class="change-delete" data-id="{{id}}">
          delete
        </button>
      </li>
      {{/if}}
    {{/each}}
  </ul>

</div>


<div class="col-md-12 text-center">
  <h2>Add Burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="burger_name">Burger Name:</label>
      <input type="text" id="burger_name" name="name">
    </div>

    <button id="add_burger" type="submit">Add</button>
  </form>


</div>



</div>
