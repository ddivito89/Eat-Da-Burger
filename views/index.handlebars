<div class="container">
  <div class="col-md-12 text-center">
    <h1>Eat-Da-Burger!</h1>
    <img class="burger_img" src="./assets/img/burger.png" />

    </img/>
  </div>

  <div class="col-md-12 text-center">
    <h2>Add Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <input type="text" id="burger_name" name="name">
      </div>
      <button id="add_burger" type="submit">Add</button>


    </form>


  </div>

  <div class="col-md-6 text-center">
    <h2>Burgers to Eat</h2>

    <ul>
      {{#each burgers}}
        {{#unless devoured}}
          <li>
            <div class="list-item">
              {{burger_name}}
            </div>
            <button class="change-devoured" data-id="{{id}}">
          Eat
        </button>
          </li>
        {{/unless}}
      {{/each}}
    </ul>

  </div>

  <div class="col-md-6 text-center">
    <h2>Burgers devoured</h2>

    <ul>
      {{#each burgers}}
        {{#if devoured}}
          <li>
            <div class="list-item">
              {{burger_name}}
            </div>
            <button class="change-throwUp" data-id="{{id}}">
          throw up
        </button>
            <button class="change-delete" data-id="{{id}}">
          delete
        </button>
          </li>
        {{/if}}
      {{/each}}
    </ul>

  </div>






</div>
