
<div class="container text-center">
  <div class="row vertical-align">
    <div class="col-lg">
      <h1>Eat-Da-Burger!</h1>
      <img class="burger_img" src="./assets/img/burger.png" />

      </img/>


      <h2>Add Burger</h2>
      <form class="create-form">

        <div class="form-group">
          <input type="text" id="burger_name" name="name">
        </div>
        <button id="add_burger" type="submit">Add</button>
      </form>
    </div>
  </div>



  <div class="row vertical-align">
    <div class="col-lg">
      <h2>Burgers Available</h2>
      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            <li>
              <div class="list-item align-middle">
                {{burger_name}}
              </div>
              <button class="change-devoured float-right" data-id="{{id}}">
          devour
        </button>
            </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col">
      <h2>Burgers Devoured</h2>
      <ul>
        {{#each burgers}}
          {{#if devoured}}
            <li>
              <div class="list-item align-middle">
                {{burger_name}}
              </div>
              <button class="change-throwUp float-right" data-id="{{id}}">
                throw up
              </button>
              <button class="change-delete float-right" data-id="{{id}}">
                delete
              </button>
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>

  </div>
</div>
